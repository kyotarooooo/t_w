<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-10">
		<h1>レッスン一覧</h1>
	</div>
	<div class="col-xs-1"></div>
</div>


<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-10">
		<% @lessons.each do |lesson| %>
			<div class = "lesson-index1">
				レッスン名 : <%= link_to lesson.lesson_name, lesson_path(lesson) %><br>
				<br>
				開催場所 : <%= lesson.location %><br>
				<br>
				時間 : <%= lesson.time %><br>
				<br>
				定員 : <%= lesson.entry_count %>人<br>
				<br>
				<%= lesson.attendanced_users.count %>人が参加中
			</div>
		<% end %>
	</div>
	<div class="col-xs-1"></div>
</div>