<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :氏名（漢字） %><br />
    <%= f.text_field :kanji, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :氏名（カナ） %><br />
    <%= f.text_field :kana, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.select :sex, [["男性", "男性"], ["女性", "女性"]],  :prompt => "選択してください" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <input type="text" name="user[postal_code]" size="10" maxlength="8" onKeyUp="AjaxZip3.zip2addr(this,'','user[address]','user[address]');">
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <input type="text" name="user[address]" size="60">
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %> 文字以上）</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認用パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "users/shared/links" %>


