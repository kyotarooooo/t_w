<div class="row space">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
  	<h1>アイテムを編集</h1>
  </div>
  <div class="col-xs-1"></div>
</div>

<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-10 item-edit">
		<%= form_for(@item) do |f| %>
			<div class = "field">
				<%= attachment_image_tag @item, :item_image, :fill, 300, 300, format: 'jpeg' %>
				<%= f.attachment_field :item_image %>
			</div>

			<div class = "field">
				<%= f.label :アイテム名 %><br />
				<%= f.text_field :item_name, autofocus: true, autocomplete: "off", :size => "50" %>
			</div>

			<div class = "field">
				<%= f.label :カテゴリー名 %><br />
				<%= f.select :category_name, [["ラケット", "ラケット"], ["ストリング", "ストリング"], ["雑貨", "雑貨"], ["その他", "その他"]],  :prompt => "選択してください" %>
			</div>

			<div class = "field">
				<%= f.label :長さ %><br />
				<p><%= f.text_field :length, autofocus: true, autocomplete: "off" %></p>
			</div>

			<div class = "field">
				<%= f.label :重さ %><br />
				<p><%= f.text_field :weight, autofocus: true, autocomplete: "off" %>g</p>
			</div>

			<div class = "field">
				<%= f.label :グリップ %><br />
				<%= f.text_field :grip, autofocus: true, autocomplete: "off" %>
			</div>

			<div class = "field">
				<%= f.label :フェイス %><br />
				<p><%= f.text_field :face, autofocus: true, autocomplete: "off" %>inch</p>
			</div>

			<div class = "field">
				<%= f.label :カラー %><br />
				<%= f.text_field :color, autofocus: true, autocomplete: "off" %>
			</div>

			<div class = "field">
				<%= f.label :価格 %><br />
				<%= f.text_field :price, autofocus: true, autocomplete: "off" %>円
			</div>

			<div class = "field">
				<%= f.label :在庫 %><br />
				<%= f.text_field :stock, autofocus: true, autocomplete: "off" %>
			</div>

			<div class = "field">
				<%= f.label :概要 %><br />
				<%= f.text_area :body, autofocus: true, autocomplete: "off", :size => "100" %>
			</div>

				<%= f.submit "登録する", class: "btn btn-success" %>
		<% end %>
	</div>
	<div class="col-xs-1"></div>
</div>

