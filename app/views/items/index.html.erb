<div class="row space">
	<div class="col-xs-1"></div>
	<div class="col-xs-10">
		<h1>アイテム一覧</h1>
		<%= flash[:success] %>
	</div>
	<div class="col-xs-1"></div>
</div>

<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
  	<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>アイテム名</th>
			<th>カラー</th>
		</tr>
	</thead>
	<% @items.each do |item| %>
	<tbody>
		<tr>
			<th><%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg' %></th>
			<td><%= link_to item.item_name, item_path(item) %></td>
			<td><%= link_to item.color %></td>
		</tr>
	</tbody>
	<% end %>
</table>
  </div>
  <div class="col-xs-1"></div>
</div>


<%= link_to "アイテムを登録する", new_item_path %>